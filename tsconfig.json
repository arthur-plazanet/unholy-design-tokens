{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@/utils/*": ["src/utils/*"],
      "@/colors/*": ["src/colors/*"]
    }
  },

  "include": ["src/**/*.ts", "bin/**/*.ts", "scripts/**/*.ts", "dist"]
}
