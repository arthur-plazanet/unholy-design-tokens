{
  "border": {
    "$type": "color",
    "width": {
      "default": {
        "value": "var(--border-width-base)"
      },
      "xsmall": {
        "value": "calc(var(--border-width-base) / 2 * var(--border-width-scale))"
      },
      "small": {
        "value": "calc(var(--border-width-base) * var(--border-width-scale))"
      },
      "medium": {
        "value": "var(--border-width-base)"
      },
      "large": {
        "value": "calc(var(--border-width-base) * 2 * var(--border-width-scale))"
      }
    },
    "style": {
      "default": {
        "value": "var(--border-style-solid)"
      }
    }
  }
}
