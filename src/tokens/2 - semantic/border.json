{
  "border": {
    "width": {
      "xsmall": {
        "value": "calc({border.width.default.value} / {border.width.scale-value.value})"
      },
      "small": {
        "value": "calc({border.width.default.value} * {border.width.scale-value.value})"
      },
      "medium": {
        "value": "{border.width.default.value}"
      },
      "large": {
        "value": "calc({border.width.default.value} * {border.width.scale-value.value} * {border.width.scale-value.value} * {border.width.scale-value.value})"
      }
    },

    "style": {
      "value": "{border.style.default.value}"
    },
    "radius": {
      "light": {
        "value": "calc({border.radius.default.value} + 2px)"
      },
      "medium": {
        "value": "calc({border.radius.default.value} + 4px)"
      },
      "heavy": {
        "value": "calc({border.radius.default.value} + 8px)"
      }
    }
  }
}
